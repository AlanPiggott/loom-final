# Supabase Configuration
# Get these values from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Server Configuration
PORT=3100

# Worker Configuration
WORKER_POLL_INTERVAL=2000  # Milliseconds between job checks
WORKER_MAX_RETRIES=3        # Max retries for recording each scene

# Storage Provider
STORAGE_PROVIDER=bunny

# Bunny Storage
BUNNY_STORAGE_ZONE=vidgen-renders
BUNNY_STORAGE_API_KEY=your-storage-zone-password
BUNNY_CDN_BASE_URL=https://your-pull-zone.b-cdn.net

# Optional Bunny CDN purge
BUNNY_ACCOUNT_API_KEY=your-account-api-key
BUNNY_PULL_ZONE_ID=123456
